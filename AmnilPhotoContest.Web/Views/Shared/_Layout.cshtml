<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Amnil Photo Contest</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        /* Main content */
        .main {
            margin-top: 30px; /* Add a top margin to avoid content overlay */
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Amnil Photo Contest", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Contestant", "Index", "Contestant")</li>
                    <li>@Html.ActionLink("Contestant Rating", "Index", "ContestantRating")</li>
                    <li>@Html.ActionLink("Photo Gallery", "Index", "PhotoGallery")</li>
                    <li>@Html.ActionLink("Map", "Index", "Map")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="nav navbar-inverse navbar-fixed-bottom">
            <p class="nav navbar-text">&copy; @DateTime.Now.Year - Amnil Technologies Pvt. Ltd.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Content/bootstrap-notify/bootstrap-notify.min.js"></script>
    @if (ViewBag.Message != null)
    {
        <script>
        $.notify({
            // options
            message: '<strong>@ViewBag.Message<strong>'//,      use when
            //icon: 'glyphicon glyphicon-warning-sign'          sign is needed
        }, {
                // settings
                type: '@ViewBag.MessageType'
            });
        </script>
    }

</body>
</html>
