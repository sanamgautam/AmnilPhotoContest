@model IEnumerable<AmnilPhotoContest.Web.Models.ContestantDTO>
@{
    /**/
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/slick-1.8.1/slick/slick.css" />
<link rel="stylesheet" type="text/css" href="~/Content/slick-1.8.1/slick/slick-theme.css" />
<style type="text/css">
    .slider {
        width: 100%;
        margin-left: 100px auto;
        margin-right: 100px auto;
    }

    .slick-slide {
        margin: 0px 20px;
    }

        .slick-slide img {
            width: 100%;
            height: 400px;
        }

    .slick-prev:before,
    .slick-next:before {
        color: black;
    }

    .slick-slide {
        transition: all ease-in-out .3s;
        opacity: .2;
    }

    .slick-active {
        opacity: .5;
    }

    .slick-current {
        opacity: 1;
    }

    .img-caption {
        background-color: rgba(0, 0, 0, 0.6);
        bottom: 0px;
        color: white;
        font-size: 1.5em;
        left: 0px;
        padding: 10px 15px;
        position: absolute;
        transition: 0.5s padding;
        text-align: center;
        width: 100%;
    }
    .img-caption:hover {
        padding-bottom: 20px;
    }
</style>
<h2>Photo Gallery</h2><hr />
@if (Model.Count() > 0)
{
    <section class="lazy slider">
        @foreach (var contestant in Model)
        {
            <div>
                <img src="~/Images/Photos/@contestant.PhotoUrl" class="img" />
                <div class="img-caption"> Photo by: @contestant.FirstName @contestant.LastName</div>
            </div>
        }
    </section>
}
<script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
<script src="~/Content/slick-1.8.1/slick/slick.min.js" type="text/javascript"></script>
<script type="text/javascript">
    var $jq = $.noConflict();
    $jq(document).ready(function () {
        $jq(".lazy").slick({
            lazyLoad: 'ondemand', // ondemand progressive anticipated
            infinite: true,
            dots: true,
            fade: true,
            centerMode: true
        });
    })
</script>